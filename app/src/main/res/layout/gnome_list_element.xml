<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/Item_Card"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_margin="@dimen/screen_border_margin">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/card_border_margin">

      <ImageView
         android:id="@+id/Gnome_Photo"
         android:layout_width="@dimen/list_photo_size"
         android:layout_height="@dimen/list_photo_size" />

      <TextView
         android:id="@+id/Gnome_Name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toEndOf="@+id/Gnome_Photo"
         android:layout_marginStart="@dimen/distance_between_text"
         android:textSize="@dimen/name_title"
         android:textStyle="bold" />

      <TextView
         android:id="@+id/Gnome_Age_Label"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/distance_between_text"
         android:text="@string/age_label"
         android:layout_below="@+id/Gnome_Name"
         android:layout_toEndOf="@+id/Gnome_Photo" />

      <TextView
         android:id="@+id/Gnome_Age"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/distance_between_text"
         android:layout_below="@+id/Gnome_Name"
         android:layout_toEndOf="@+id/Gnome_Age_Label" />

   </RelativeLayout>
</android.support.v7.widget.CardView>